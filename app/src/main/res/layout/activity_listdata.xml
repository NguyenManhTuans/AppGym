<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.workout.AbsActivity"
    android:background="@color/gray">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/baseline_arrow_back_24"
        android:text="."
        />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/two_legs_hips"/>

    <View
        android:id="@+id/listdataView"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:background="@color/white">
    </View>

    <TextView
        android:id="@+id/listdata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/listdataView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="EXERCISE NAME"
        android:textColor=" #48B6F1 "
        android:textSize="35dp"
        android:textStyle="bold"/>
    
    <TextView
        android:id="@+id/text_view_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/listdataView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="00:00"
        android:textSize="60sp"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/btn_start_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_countdown"
        android:layout_centerHorizontal="true"
        android:text="Start"
        android:textSize="35dp"
        android:backgroundTint="#48B6F1"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/btn_reset_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_start_countdown"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="11dp"
        android:text="reset"
        android:textSize="35dp"
        android:backgroundTint="#48B6F1"
        android:textColor="@color/white"
        android:visibility="invisible"
        tools:visibility="visible"
        />

    <Button
        android:id="@+id/btnDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="25dp"
        android:text="done"
        android:textSize="35dp"
        android:backgroundTint="#48B6F1"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btnPrevious"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="25dp"
        android:layout_alignParentBottom="true"
        android:text="previous"
        android:textSize="35dp"
        android:backgroundTint="#48B6F1"
        android:textColor="@color/white"/>
</RelativeLayout>